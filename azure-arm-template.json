{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
		"Extension": {
            "defaultValue": false,
            "type": "bool",
            "metadata": {
                "description": "Is Free Trial subscription in extension or not"
            }
        },
		"InstallType": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Install type for Azure SaaS"
            }
        },
		"StagingActivateJsonURL": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "URL for activate.json"
            }
        },
		"StagingCloudURL": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "URL for staging"
            }
        },
		"Key": {
            "defaultValue": "NotSpecified",
            "type": "string",
            "metadata": {
                "description": "Evaluation/Extension key to for NCache"
            }
        },
        "FirstName": {
            "type": "string",
            "metadata": {
                "description": "First Name"
            }
        },
        "LastName": {
            "type": "string",
            "metadata": {
                "description": "Last Name"
            }
        },
        "Company": {
            "type": "string",
            "metadata": {
                "description": "Company"
            }
        },
        "Email": {
            "type": "string",
            "metadata": {
                "description": "Email Address"
            }
        },
        "AdminUsername": {
            "defaultValue": "azadmin",
            "type": "string",
            "metadata": {
                "description": "NCache VM administrator username"
            }
        },
        "AdminPassword": {
            "defaultValue": "12345Alachisoft",
            "type": "secureString",
            "metadata": {
                "description": "NCache VM administrative user password"
            }
        },
        "PublicIpAddressName": {
            "defaultValue": "NC_VM_IP_",
            "type": "string"
        },
        "Location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "string"
        },
        "VirtualMachineNamePrefix": {
            "defaultValue": "NC-VM-",
            "type": "string"
        },
        "VirtualMachineSize": {
            "defaultValue": "Standard_DS1_v2",
            "type": "string"
        },
        "SubnetName": {
            "type": "string"
        },
        "VirtualNetworkName": {
            "defaultValue": "MyVNET1",
            "type": "string"
        },
        "NetworkInterfaceName": {
            "defaultValue": "NC-NIC-",
            "type": "string"
        },
        "NetworkSecurityGroupName": {
            "defaultValue": "NetworkSecurityGroup",
            "type": "string"
        },
        "PlanName": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Azure plan"
            }
        },
        "Offer": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Azure offer"
            }
        },
        "SKU": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "SKU of image"
            }
        },
        "Publisher": {
            "defaultValue": "ncache",
            "type": "string",
            "metadata": {
                "description": "Publisher of image"
            }
        },
        "Product": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Product Id of offer"
            }
        },
        "Version": {
            "defaultValue": "latest",
            "type": "string",
            "metadata": {
                "description": "Version number of NCache."
            }
        },
		"ClusterPort": {
			"defaultValue": 7800,
			"minValue": 1024,
			"maxValue": 65535,
			"type": "int",
			"metadata": {
				"description": "Port for NCache Cluster"
            }
		},
		"NCacheVmCount": {
            "defaultValue": 1,
            "minValue": 1,
            "type": "int",
            "metadata": {
                "description": "Number of NCache Nodes to be deployed"
            }
        }
    },
    "resources": [
		{
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2021-04-01",
            "name": "[concat(parameters('VirtualMachineNamePrefix'), copyIndex(1))]",
            "location": "[parameters('Location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces/', concat(parameters('NetworkInterfaceName'), copyIndex(1)))]"
            ],
            "plan": {
			"name": "[parameters('PlanName')]",
			"publisher": "[parameters('Publisher')]",
			"product": "[parameters('Product')]"
	    },
		"properties": {
			"osProfile": {
				"computerName": "[concat(parameters('VirtualMachineNamePrefix'), copyIndex(1))]",
				"adminUsername": "[parameters('AdminUsername')]",
				"adminPassword": "[parameters('AdminPassword')]",
				"windowsConfiguration": {
					"provisionVmAgent": "true"
				},
				"customData": "[base64(concat('Invoke-WebRequest -Uri \"https://raw.githubusercontent.com/HassaanYounas/ncache-arm-template-test/main/StartupScriptWin.ps1 \" -OutFile C:/StartupScriptWin.ps1; C:/StartupScriptWin.ps1 ', ' -StagingCloudURL \"', parameters('StagingCloudURL'), '\" -StagingActivateJsonURL \"', parameters('StagingActivateJsonURL'), ' -Extension \"', parameters('Extension'), ' -InstallType \"', parameters('InstallType'), ' -Key \"', parameters('Key'), ' -FirstName \"', parameters('FirstName'), ' -LastName \"', parameters('LastName'), ' -Email \"', parameters('Email'), ' -Company \"', parameters('Company')))]"  
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('VirtualMachineSize')]"
                },
                "storageProfile": {
				"imageReference": {
					"publisher": "[parameters('Publisher')]",
					"offer": "[parameters('Offer')]",
					"sku": "[parameters('SKU')]",
					"version": "[parameters('Version')]"
				},
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('NetworkInterfaceName'), copyIndex(1)))]"
                        }
                    ]
                }
            },
            "copy": {
                "name": "vmLoop",
                "count": "[parameters('NCacheVmCount')]",
                "mode": "serial"
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2017-11-01",
            "name": "[concat(parameters('NetworkInterfaceName'), copyIndex(1))]",
            "location": "[parameters('Location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIpAddresses/', concat(parameters('PublicIpAddressName'), copyIndex(1)))]",
                "[parameters('NetworkSecurityGroupName')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets/', parameters('VirtualNetworkName'), parameters('SubnetName'))]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIpAddresses', concat(parameters('PublicIpAddressName'), copyIndex(1)))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('NetworkSecurityGroupName'))]"
                }
            },
            "copy": {
                "name": "networkInterfaceLoop",
                "count": "[parameters('NCacheVmCount')]",
                "mode": "serial"
            }
        },
        {
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2017-11-01",
            "name": "[concat(parameters('PublicIpAddressName'), copyIndex(1))]",
            "location": "[parameters('Location')]",
            "tags": {
                "ipAddress": "ipAddresses"
            },
            "properties": {
                "publicIpAllocationMethod": "Dynamic"
            },
            "copy": {
                "name": "ipLoop",
                "count": "[parameters('NCacheVmCount')]",
                "mode": "serial"
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2016-09-01",
            "name": "[parameters('NetworkSecurityGroupName')]",
            "location": "[parameters('Location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "default-allow-rdp",
                        "properties": {
                            "priority": 1000,
                            "sourceAddressPrefix": "*",
                            "protocol": "Tcp",
                            "destinationPortRange": "3389",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "default-allow-cluster",
                        "properties": {
                            "priority": 1001,
                            "sourceAddressPrefix": "*",
                            "protocol": "Tcp",
                            "destinationPortRange": "[parameters('ClusterPort')]",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "default-allow-ncmanagement",
                        "properties": {
                            "priority": 1002,
                            "sourceAddressPrefix": "*",
                            "protocol": "Tcp",
                            "destinationPortRange": "8250",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "default-allow-rdp-ob",
                        "properties": {
                            "priority": 1003,
                            "sourceAddressPrefix": "*",
                            "protocol": "Tcp",
                            "destinationPortRange": "3389",
                            "access": "Allow",
                            "direction": "Outbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "default-allow-cluster-ob",
                        "properties": {
                            "priority": 1004,
                            "sourceAddressPrefix": "*",
                            "protocol": "Tcp",
                            "destinationPortRange": "[parameters('ClusterPort')]",
                            "access": "Allow",
                            "direction": "Outbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "default-allow-ncmanagement-ob",
                        "properties": {
                            "priority": 1005,
                            "sourceAddressPrefix": "*",
                            "protocol": "Tcp",
                            "destinationPortRange": "8250",
                            "access": "Allow",
                            "direction": "Outbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    }
                ]
            }
        }
    ]
}